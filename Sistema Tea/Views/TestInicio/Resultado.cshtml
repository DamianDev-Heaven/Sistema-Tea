@{
    Layout = null;
    ViewData["Title"] = "Resultado del Test";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/ListarPsi.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/resultadoTestIni.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center">
                    <i class="bi bi-hospital me-2"></i> eMind
                </a>
            </div>
        </nav>
    </header>
    <div class="result-card">
        <div class="result-title">Resultado del Test</div>

        <p class="score">Puntaje Total Obtenido: <strong>@ViewBag.Puntaje</strong></p>

        <p>
            Nivel de probabilidad de TEA:
            @if (ViewBag.Resultado == "Probabilidad Alta")
            {
                <span class="badge bg-danger badge-result">Alta</span>
            }
            else if (ViewBag.Resultado == "Probabilidad Media")
            {
                <span class="badge bg-warning text-dark badge-result">Media</span>
            }
            else
            {
                <span class="badge bg-success badge-result">Baja</span>
            }
        </p>

        <p class="mt-4">
            Este resultado es solo una orientación. Te recomendamos visitar nuestra Clínica de Evaluación TEA eMind en la cual contamos con profesionales especializados para una evaluación completa.
        </p>

        <a asp-controller="TestInicio" asp-action="Index" class="btn btn-light text-primary btn-volver">
            <i class="bi bi-arrow-left-circle me-2"></i> Volver al inicio
        </a>
    </div>
    <!-- Footer -->
    <footer class="bg-light p-4 rounded shadow-sm">
        <div class="row">
            <div class="col-md-6">
                <h5>Clínica de Evaluación TEA eMind</h5>
                <p><i class="bi bi-geo-alt-fill me-2"></i> Santa Ana</p>
                <p>
                    <i class="bi bi-telephone-fill me-2"></i>  (+503) 2401-3421
                </p>
                <p><i class="bi bi-envelope-fill me-2"></i> eMind@gmail.com</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="mb-0">© @DateTime.Now.Year Clínica eMind - Todos los derechos reservados</p>
            </div>
        </div>
    </footer>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
