@{
    var d = ViewBag.Datos;
    var historial = ViewBag.Historial as List<dynamic>;
}

<h2>Resultado Global ADI-R</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mb-4">
    <h4>Información del Paciente</h4>
    <p><strong>Nombre:</strong> @d.PacienteNombre</p>
    <p><strong>Fecha de nacimiento:</strong> @d.FechaNacimiento.ToString("dd/MM/yyyy")</p>
    <p><strong>Edad al momento de evaluación:</strong> @ViewBag.EdadTexto</p>
    <p><strong>Psicólogo:</strong> @d.PsicologoNombre</p>
</div>

<div class="mb-4">
    <h4>Resultado por Algoritmo: @d.TipoAlgoritmoUsado</h4>
    <ul>
        <li><strong>Comunicación:</strong> @d.ComunicacionSocial_PuntuacionTotal</li>
        <li><strong>Interacción Social:</strong> @d.InteraccionSocialReciproca_PuntuacionTotal</li>
        <li><strong>Conductas Repetitivas:</strong> @d.ComportamientosRepetitivos_PuntuacionTotal</li>
    </ul>
    <p><strong>Clasificación:</strong> <span class="text-success">@d.ClasificacionADIR</span></p>
</div>

<div class="mb-4">
    <h4>Historial de Preguntas</h4>
    <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Pregunta</th>
                    <th>Respuesta</th>
                    <th>Comentario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in historial)
                {
                    <tr>
                        <td>@item.CodigoPregunta</td>
                        <td>@item.TextoPregunta</td>
                        <td>@item.CodigoRespuestaAlgoritmo</td>
                        <td>@item.NotasObservacionItem</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<hr />

<form asp-controller="Adir" asp-action="GuardarNotaDiagnostica" method="post">
    <input type="hidden" name="SesionID" value="@d.SesionID" />
    <div class="mb-3">
        <label class="form-label">Nota diagnóstica del psicólogo</label>
        <textarea name="NotaDiagnostica" class="form-control" rows="4">@d.NotasResultadoGlobal</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Nota</button>
</form>
