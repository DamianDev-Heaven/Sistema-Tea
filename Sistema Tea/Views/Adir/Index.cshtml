@model Sistema_Tea.Models.ADIR_Sesion
@{
    ViewData["Title"] = "Asignar nueva sesión ADI-R";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="CrearSesion" method="post" class="needs-validation" novalidate>

    <!-- Psicólogo: mostrar solo texto -->
    <div class="mb-3">
        <label class="form-label">Psicólogo</label>
        <input type="text" class="form-control" value="@ViewBag.NombrePsicologo" readonly />
    </div>

    <!-- Paciente -->
    <div class="mb-3">
        <label asp-for="PacienteID" class="form-label">Paciente</label>
        <select asp-for="PacienteID" class="form-select" asp-items="ViewBag.Pacientes" required id="pacienteSelect">
            <option value="" selected disabled>-- Selecciona un paciente --</option>
        </select>
        <div class="invalid-feedback">
            Por favor, selecciona un paciente.
        </div>
        <span asp-validation-for="PacienteID" class="text-danger"></span>
    </div>

    <!-- Tutor (solo texto, se rellena con JS) -->
    <div class="mb-3">
        <label class="form-label">Tutor asignado</label>
        <input type="text" id="tutorNombre" class="form-control" readonly placeholder="Selecciona un paciente para ver tutor" />
    </div>

    <!-- Eliminar Edad mental -->

    <div class="mb-3">
        <label asp-for="EntrevistadoPorNombre" class="form-label">Nombre del entrevistado</label>
        <input asp-for="EntrevistadoPorNombre" class="form-control" required />
        <div class="invalid-feedback">Este campo es obligatorio.</div>
        <span asp-validation-for="EntrevistadoPorNombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RelacionConPaciente" class="form-label">Relación con el paciente</label>
        <input asp-for="RelacionConPaciente" class="form-control" required />
        <div class="invalid-feedback">Este campo es obligatorio.</div>
        <span asp-validation-for="RelacionConPaciente" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar sesión</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Lista de pacientes con tutor, pasada desde el controlador
        const pacientes = @Html.Raw(ViewBag.PacientesConTutorJson ?? "[]");

        // Cuando cambie paciente, actualizar tutor
        document.getElementById('pacienteSelect').addEventListener('change', function () {
            const selectedId = this.value;
            const paciente = pacientes.find(p => p.PacienteID == selectedId);
            if (paciente && paciente.TutorNombre) {
                document.getElementById('tutorNombre').value = paciente.TutorNombre;
            } else {
                document.getElementById('tutorNombre').value = 'Sin tutor asignado';
            }
        });
    </script>
}
